<?xml version='1.0' encoding='utf-8'?>
<widget
	id="com.garoudan.skeleton"
	version="0.0.1"
	xmlns="http://www.w3.org/ns/widgets"
	xmlns:cdv="http://cordova.apache.org/ns/1.0"
>
	<name>Skeleton</name>
	<description> Skeleton app proposal.
	</description>
	<author
		email="skeleton@garoudan.com"
		href="http://garoudan.com/skeleton"
	> GarouDan (Danilo Ara√∫jo Silva])
	</author>
	<content src="view/html/index.html" />
	<plugin
		name="cordova-plugin-whitelist"
		spec="1" />
	<access origin="*" />
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	<allow-intent href="tel:*" />
	<allow-intent href="sms:*" />
	<allow-intent href="mailto:*" />
	<allow-intent href="geo:*" />
	<preference
		name="SplashScreen"
		value="screen" />
	<platform name="android">
		<allow-intent href="market:*" />
		<icon src="www/view/image/icon/app/android/generic.png" />
		<splash src="www/view/image/splash/android/generic.png" />
	</platform>
	<platform name="ios">
		<allow-intent href="itms:*" />
		<allow-intent href="itms-apps:*" />
		<icon src="www/view/image/icon/app/ios/generic.png" />
		<splash src="www/view/image/splash/ios/generic.png" />
	</platform>
</widget>