<?xml version='1.0' encoding='utf-8'?>
<widget
	id="com.garoudan.skeleton"
	version="0.0.1"
	xmlns="http://www.w3.org/ns/widgets"
	xmlns:cdv="http://cordova.apache.org/ns/1.0"
>
	<name>Skeleton</name>
	<description> Skeleton app proposal.
	</description>
	<author
		email="skeleton@garoudan.com"
		href="http://garoudan.com/skeleton"
	> GarouDan (Danilo Ara√∫jo Silva])
	</author>
	<content src="index.html" />
	<plugin
		name="cordova-plugin-whitelist"
		spec="1" />
	<access origin="*" />
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	<allow-intent href="tel:*" />
	<allow-intent href="sms:*" />
	<allow-intent href="mailto:*" />
	<allow-intent href="geo:*" />
	<preference
		name="SplashScreen"
		value="screen" />
	<platform name="android">
		<allow-intent href="market:*" />
		<icon
			src="resources/android/icon/ldpi.png"
			density="ldpi" />
		<icon
			src="resources/android/icon/mdpi.png"
			density="mdpi" />
		<icon
			src="resources/android/icon/hdpi.png"
			density="hdpi" />
		<icon
			src="resources/android/icon/xhdpi.png"
			density="xhdpi" />
		<icon
			src="resources/android/icon/xxhdpi.png"
			density="xxhdpi" />
		<icon
			src="resources/android/icon/xxxhdpi.png"
			density="xxxhdpi" />
		<splash
			src="resources/android/splash/ldpi.png"
			density="ldpi" />
		<splash
			src="resources/android/splash/mdpi.png"
			density="mdpi" />
		<splash
			src="resources/android/splash/hdpi.png"
			density="hdpi" />
		<splash
			src="resources/android/splash/xhdpi.png"
			density="xhdpi" />
		<splash
			src="resources/android/splash/xxhdpi.png"
			density="xxhdpi" />
		<splash
			src="resources/android/splash/xxxhdpi.png"
			density="xxxhdpi" />
	</platform>
	<platform name="ios">
		<allow-intent href="itms:*" />
		<allow-intent href="itms-apps:*" />
		<icon
			src="resources/ios/icon/ldpi.png"
			density="ldpi" />
		<icon
			src="resources/ios/icon/mdpi.png"
			density="mdpi" />
		<icon
			src="resources/ios/icon/hdpi.png"
			density="hdpi" />
		<icon
			src="resources/ios/icon/xhdpi.png"
			density="xhdpi" />
		<icon
			src="resources/ios/icon/xxhdpi.png"
			density="xxhdpi" />
		<icon
			src="resources/ios/icon/xxxhdpi.png"
			density="xxxhdpi" />
		<splash
			src="resources/ios/splash/ldpi.png"
			density="ldpi" />
		<splash
			src="resources/ios/splash/mdpi.png"
			density="mdpi" />
		<splash
			src="resources/ios/splash/hdpi.png"
			density="hdpi" />
		<splash
			src="resources/ios/splash/xhdpi.png"
			density="xhdpi" />
		<splash
			src="resources/ios/splash/xxhdpi.png"
			density="xxhdpi" />
		<splash
			src="resources/ios/splash/xxxhdpi.png"
			density="xxxhdpi" />
	</platform>
</widget>